{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "typings": [
        "./typings/index.d.ts"
      ],
      "ray": [
        "./.ray"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.*",
    "ray/**/*.*",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}